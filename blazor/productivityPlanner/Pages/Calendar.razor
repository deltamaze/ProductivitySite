@page "/calendar"
@using productivityPlanner.Services;
@inject AppState state


<h1>Calendar</h1>
<br />
<style>
    ul {
        list-style-type: none;
    }



    .month {
        padding: 10px 25px;
        width: 100%;
        background-image: linear-gradient(180deg, rgb(6, 119, 130) 0%, #011435 70%);
        text-align: center;
    }

        .month ul {
            margin: 0;
            padding: 0;
        }

            .month ul li {
                color: white;
                font-size: 20px;
                text-transform: uppercase;
                letter-spacing: 3px;
            }

        .month .prev {
            float: left;
            /*padding-top: 10px;*/
        }

        .month .next {
            float: right;
            /*padding-top: 10px;*/
        }

    .weekdays {
        margin: 0;
        padding: 10px 0;
        background-color: #ddd;
    }

        .weekdays li {
            display: inline-block;
            color: #666;
            text-align: center;
        }

    .days {
        padding: 10px 0;
        background: #eee;
        margin: 0;
    }

        .days li {
            list-style-type: none;
            display: inline-block;
            text-align: center;
            margin-bottom: 5px;
            font-size: 12px;
            color: #777;
        }

            .days li .active {
                display: block;
                padding: 5px;
                background-image: linear-gradient(180deg, rgb(6, 119, 130) 0%, #011435 70%);
                color: white !important
            }

        .weekdays li, .days li {
            width: 13.3%;
        }
</style>

<div class="btn-group btn-group-toggle" data-toggle="buttons">
    <label class="btn btn-info active">
        <input type="radio" name="options" id="option1" autocomplete="off" checked> Planner
    </label>
    <label class="btn btn-info">
        <input type="radio" name="options" id="option2" autocomplete="off"> Journal
    </label>
</div>
<button type="button" class="btn btn-info">Jump to Today</button>
<br />
<br />
<div class="" style="min-width:300px; float:left;margin-right:10px">
    <div class="month">
        <ul>
            <li class="prev" @onclick="()=>state.ShiftTargetMonth(ShiftDateDirection.Back,DatePart.Month)">&#10094;</li>
            <li class="next">&#10095;</li>
            <li>
                August
            </li>
        </ul>
        <ul>
            <li class="prev">&#10094;</li>
            <li class="next">&#10095;</li>
            <li>2017</li>
        </ul>
    </div>

    <ul class="weekdays">
        <li>Mo</li>
        <li>Tu</li>
        <li>We</li>
        <li>Th</li>
        <li>Fr</li>
        <li>Sa</li>
        <li>Su</li>
    </ul>

    <ul class="days">
        <li>1</li>
        <li>2</li>
        <li>3</li>
        <li>4</li>
        <li>5</li>
        <li>6</li>
        <li>7</li>
        <li>8</li>
        <li>9</li>
        <li><span class="active">10</span></li>
        <li>11</li>
        <li>12</li>
        <li>13</li>
        <li>14</li>
        <li>15</li>
        <li>16</li>
        <li>17</li>
        <li>18</li>
        <li>19</li>
        <li>20</li>
        <li>21</li>
        <li>22</li>
        <li>23</li>
        <li>24</li>
        <li>25</li>
        <li>26</li>
        <li>27</li>
        <li>28</li>
        <li>29</li>
        <li>30</li>
        <li>31</li>
    </ul>
</div>

